<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".WriteResumeActivity"
              android:orientation="vertical"
              android:background="@color/maincolor">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#4da4df">

        <Button
                android:id="@+id/btnBack"
                android:drawableLeft="@drawable/ic_arrow_back"
                android:drawablePadding="3dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="뒤로"
                android:textSize="20dp"
                android:textColor="@color/yello"
                android:textStyle="bold"
                android:background="#00ff0000"/>

        <TextView
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이력서 등록"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
        />

    </RelativeLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:layout_marginBottom="10dp">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="* 개인정보수정"
                        android:layout_margin="10dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="20dp"/>
                <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/blue"
                        android:layout_marginBottom="10dp"
                />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray"
                            android:text="나이"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="10dp"
                            android:layout_gravity="center"
                    />

                    <TextView
                            android:text="20"
                            android:textSize="18dp"
                            android:id="@+id/resume_age"
                            android:layout_marginLeft="10dp"
                            android:layout_width="100dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            />

                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray"
                            android:text="이름"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="10dp"
                            android:layout_gravity="center"
                    />

                    <TextView
                            android:textSize="18dp"
                            android:text="이름"
                            android:id="@+id/resume_name"
                            android:layout_marginLeft="10dp"
                            android:layout_width="100dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            />

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray"
                            android:text="아이디"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="10dp"
                            android:layout_gravity="center"
                    />

                    <TextView
                            android:text="2ada@never.com"
                            android:textSize="18dp"
                            android:id="@+id/resume_id"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                             />

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray"
                            android:text="핸드폰"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="10dp"
                            android:layout_gravity="center"
                    />

                    <TextView
                            android:textSize="18dp"
                            android:text="010-0000-0000"
                            android:id="@+id/resume_phone"
                            android:layout_marginLeft="10dp"
                            android:layout_width="200dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            />

                </LinearLayout>





            </LinearLayout>



            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:layout_marginBottom="10dp">

                <TextView
                        android:id="@+id/s1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="* 이력서 제목 (25자 이내)"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="20dp"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <EditText
                            android:paddingLeft="10dp"
                            android:id="@+id/resume_title"
                            android:hint="자동완성 버튼을 눌러보세요!"
                            android:textColorHint="@color/gray"
                            android:layout_below="@+id/s1"
                            android:background="@drawable/resume_edit_box"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="15dp"
                            android:textSize="20dp"
                            android:layout_weight="1"
                    />
                    <Button
                            android:id="@+id/titleMakeBtn"
                            android:layout_gravity=""
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:text="자동완성"
                            android:textStyle="bold"
                            android:textSize="15dp"
                            android:background="@color/gray"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="15dp"
                    />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="* 희망 직업 선택하기"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/blue" />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <CheckBox
                            android:id="@+id/job1"
                            android:buttonTint="@color/gray"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:text="생산/포장"
                            android:textColor="@color/black"
                            android:textSize="20dp"

                    />

                    <CheckBox
                            android:id="@+id/job2"
                            android:buttonTint="@color/gray"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:text="외식/서비스"
                            android:textColor="@color/black"
                            android:textSize="20dp" />

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <CheckBox
                            android:id="@+id/job3"
                            android:buttonTint="@color/gray"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:text="건설/기술"
                            android:textColor="@color/black"
                            android:textSize="20dp"

                    />

                    <CheckBox
                            android:id="@+id/job4"
                            android:buttonTint="@color/gray"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:text="청소/미화"
                            android:textColor="@color/black"
                            android:textSize="20dp" />

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <CheckBox
                            android:id="@+id/job5"
                            android:buttonTint="@color/gray"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:text="기타/보조"
                            android:textColor="@color/black"
                            android:textSize="20dp"
                    />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="* 할 수 있는 일을 모두 골라보세요!"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/blue"

                />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <CheckBox
                            android:id="@+id/option1"
                            android:buttonTint="@color/gray"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:text="문서 작성하기"
                            android:textColor="@color/black"
                            android:textSize="20dp"

                    />

                    <CheckBox
                            android:id="@+id/option2"
                            android:buttonTint="@color/gray"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:text="간단한 계산"
                            android:textColor="@color/black"
                            android:textSize="20dp" />

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <CheckBox
                            android:id="@+id/option3"
                            android:buttonTint="@color/gray"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:text="5~20kg 물건 들기"
                            android:textColor="@color/black"
                            android:textSize="20dp"

                    />

                    <CheckBox
                            android:id="@+id/option4"
                            android:buttonTint="@color/gray"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:text="서서 일하기"
                            android:textColor="@color/black"
                            android:textSize="20dp" />

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <CheckBox
                            android:id="@+id/option5"
                            android:buttonTint="@color/gray"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:text="점 찍기"
                            android:textColor="@color/black"
                            android:textSize="20dp"

                    />

                    <CheckBox
                            android:id="@+id/option6"
                            android:buttonTint="@color/gray"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:text="양손 사용"
                            android:textColor="@color/black"
                            android:textSize="20dp" />

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <CheckBox
                            android:id="@+id/option7"
                            android:buttonTint="@color/gray"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:text="반복적인 일"
                            android:textColor="@color/black"
                            android:textSize="20dp"

                    />

                    <CheckBox
                            android:id="@+id/option8"
                            android:buttonTint="@color/gray"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:text="일상 듣고 말하기"
                            android:textColor="@color/black"
                            android:textSize="20dp" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="* 하고 싶은 말 (자기소개)"
                            android:textColor="@color/black"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                    <Button
                            android:id="@+id/introBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_marginLeft="80dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="15dp"
                            android:background="@color/gray"
                            android:text="자동완성"
                            android:textSize="15dp"
                            android:textStyle="bold" />


                </LinearLayout>

                <EditText
                        android:paddingLeft="10dp"
                        android:id="@+id/introduce"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/resume_edit_box"
                        android:hint=" \n   글을 작성하기 어렵다면 자동완성 버튼을 눌러보세요! \n \n \n\ "
                        android:textColorHint="@color/gray"

                />

            </LinearLayout>

            <TextView
                    android:onClick="write"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/blue"
                    android:drawableRight="@drawable/ic_right_black"
                    android:drawablePadding="20dp"
                    android:gravity="center"
                    android:text="이력서 등록 완료"
                    android:textSize="25dp"
                    android:textStyle="bold" tools:ignore="OnClick"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>